{
  "manifest_version": 3,
  "version": "0.0.1",
  "name": "Shorts, Reels and TikTok Blocker",
  "action": {
    "default_popup": "index.html"
  },
  "permissions": [
    "scripting",
    "storage",
    "activeTab",
    "webNavigation"
  ],
  "host_permissions": [
    "http://*/*",
    "https://*/*"
  ],
  "background": {
    "service_worker": "background.js"
  },
  "icons": {
    "32": "icon32.png"
  },
  "content_scripts": [
    {
        "matches": [
          "*://www.youtube.com/shorts/*"
        ],
        "js": ["./blankShorts.js"]
    }
]
}