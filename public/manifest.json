{
  "manifest_version": 3,
  "version": "0.0.1",
  "name": "Shorts, Reels and TikTok Blocker",
  "action": {
    "default_popup": "index.html"
  },
  "permissions": [
    "scripting",
    "storage",
    "activeTab",
    "webNavigation"
  ],
  "host_permissions": [
    "*://*.youtube.com/*",
    "*://*.instagram.com/*",
    "*://*.tiktok.com/*"
  ],
  "background": {
    "service_worker": "./js/background.js"
  },
  "icons": {
    "32": "./img/icon32.png"
  }
}